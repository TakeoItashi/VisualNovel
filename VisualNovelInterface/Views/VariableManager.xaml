<Window x:Class="VisualNovelInterface.Views.VariableManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:import="clr-namespace:VisualNovelInterface.VariablesImport"
        mc:Ignorable="d"
        Title="VariableManager" Height="400" Width="400">
    <Window.DataContext>
        <import:VariablesManager/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <ListView Margin="0,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"/>
                    <GridViewColumn Header="Data Type"/>
                    <GridViewColumn Header="Starting Value"/>
                </GridView>
            </ListView.View>
        </ListView>
        <DockPanel Grid.Column="1" LastChildFill="False">
            <Button Content="Add" DockPanel.Dock="Top"/>
            <Button Content="Delete" DockPanel.Dock="Top"/>
            <Button Content="Close" DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
